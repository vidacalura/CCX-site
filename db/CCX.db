CREATE TABLE Jogadores(
cod_jog INT(8) AUTO_INCREMENT PRIMARY KEY,
nome VARCHAR(70) NOT NULL,
apelido VARCHAR(20),
titulo VARCHAR(3),
info VARCHAR(255), -- informações adicionais sobre o jogador
elo_classico INT(4),
elo_rapido INT(4),
elo_blitz INT(4),
jogos INT(8) NOT NULL,
vitorias INT(8) NOT NULL,
derrotas INT(8) NOT NULL,
empates INT(8) NOT NULL,
data_nascimento DATE NOT NULL
);

CREATE TABLE Usuarios(
cod_usu BINARY(16) PRIMARY KEY, -- UUID
username VARCHAR(30) NOT NULL,
senha VARCHAR(256) NOT NULL,
adm BOOLEAN NOT NULL,
data_reg DATE NOT NULL,
UNIQUE(username)
);

CREATE TABLE Noticias(
cod_notc INT(8) AUTO_INCREMENT PRIMARY KEY,
cod_autor BINARY(16) NOT NULL,
--img_src TEXT NOT NULL,
titulo VARCHAR(255) NOT NULL,
noticia TEXT NOT NULL,
data_publicacao DATETIME NOT NULL,
UNIQUE(titulo)
);

CREATE TABLE Torneios(
cod_torn INT(8) AUTO_INCREMENT PRIMARY KEY,
titulo VARCHAR(100) NOT NULL,
descricao VARCHAR(255) NOT NULL,
comentarios TEXT,
data_inicio DATE NOT NULL,
data_fim DATE,
modo VARCHAR(10) NOT NULL, -- Presencial | Online
participantes INT(3) NOT NULL,
placar_final TEXT -- *[1]
);

CREATE TABLE Trofeus(
cod_trof INT(8) AUTO_INCREMENT PRIMARY KEY,
cod_jog INT(8) NOT NULL,
cod_torn INT(8) NOT NULL,
posicao INT(3) NOT NULL
);

